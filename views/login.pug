doctype html
html
  head
    title= title
    style
      include ../public/css/login.css
  body
    h1= message
    form(action='/login', method='POST')
      input(type='text', name="username", placeholder='username')
      input(type='text', name="password", placeholder='password')
      input(type='submit', value='submit')
    h2= flash_message